{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "server/src",
    "outDir": "server/dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true, // Enable importing .ts extensions
    "noEmit": true // Prevent emitting compiled JS files
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules"]
}
